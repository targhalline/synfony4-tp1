{# templates/Advert/view.html.twig #}

<!DOCTYPE html>
<html>
<head>
  <title>Affichage de l'annonce {{ advert.getId() }}</title>
</head>
<body>
  <h1>Hello Annonce n°{{ advert.getId() }} !</h1>
  <p> le titre : {{ advert.title }}</p>
  <p> l'auteur : {{ advert.author }}</p>
  <p> le contenu : {{ advert.content }}</p>
  <p> publié le : {% if advert.date %} {{ advert.date|date('Y-m-d H:i:s') }} {% endif %}</p>
  <p><img src='{{ advert.getImage.url }}' alt='{{ advert.getImage.alt }}'></p>
  <p> Le nombre des candidatures jusqu'à maintenant est : {{ listApplications | length }}</p>
  <ul>
  {% for application in listApplications %}
    <li>le {{ application.date|date('Y-m-d H:i:s') }} {{ application.author }} a écrit {{ application.content }}</li>
    {% else %} <li>Pas d'utilisateur trouvé.</li>
  {% endfor %}
</ul>
</body>
</html>

